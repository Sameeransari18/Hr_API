
@{
    ViewBag.Title = "Resumes";
}

<h2>
    @ViewBag.Title
</h2>


<table id="MyTables" class=" table-hover table-striped">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>ContactNo</th>
            <th>Date</th>
            <th>Qualification</th>
            <th>SkillSet</th>
            <th>Experience</th>
            <th>Reference</th>
            <th>Status</th>
            <th>Comments</th>
            
        </tr>
    </thead>
</table>

<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script>

        $(document).ready(function () {
            //$.fn.dataTable.ext.errMode = 'throw';
            $('#MyTables').DataTable({

                "ajax": {
                    "url": "/Resume/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    {"data":"FirstName"},
                    {"data":"LastName"},
                    {"data":"Email"},
                    {"data":"ContactNo"},
                    { "data":"Date"},
                    {"data":"Qualification"},
                    {"data":"SkillSet"},
                    { "data":"Experience"},
                    { "data":"Reference"},
                    { "data":"Status"},
                    {"data":"Comments"}
                ]
            });
        });

    </script>
}



